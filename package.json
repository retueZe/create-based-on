{
  "private": true,
  "name": "create-based-on",
  "version": "1.0.0",
  "author": "retueze",
  "license": "MIT",
  "description": "CLI tool for project scaffolding.",
  "keywords": [
    "package",
    "project",
    "factory",
    "initializer",
    "build",
    "template",
    "configure",
    "cli",
    "util",
    "utility"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/retueZe/create-based-on"
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "create-based-on": "bin/create-based-on.js"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint .",
    "build:prod": "npm run lint && rollup -c",
    "build:dev": "tsc --outDir dist --inlineSourceMap",
    "clean": "rm -rf dist",
    "prepare": "npm run clean && npm run build:prod",
    "postpublish": "npm run clean"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.1",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.2.5",
    "@types/prompts": "^2.4.4",
    "@types/tar": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-plugin-deprecation": "^1.4.1",
    "rollup": "^3.21.2",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "minimist": "^1.2.0",
    "project-factory": "^1.0.0",
    "prompts": "^2.4.0",
    "tar": "^6.1.0"
  }
}
